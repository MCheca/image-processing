# Server Configuration
PORT=3000
NODE_ENV=production
LOG_LEVEL=info
TRUST_PROXY=false

# MongoDB Configuration
# For Docker Compose, use: mongodb://mongodb:27017/image-processing
# For local development, use: mongodb://localhost:27017/image-processing
MONGODB_URI=mongodb://mongodb:27017/image-processing

# CORS Configuration
CORS_ORIGIN=*
CORS_CREDENTIALS=true

# Security - Rate Limiting
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW=15 minutes

# Image Processing
OUTPUT_DIR=./output
MAX_IMAGE_SIZE=10485760
